                                                    <StackPanel Orientation="Vertical" Margin="10,0,0,0">
                                                        <TextBlock Text="{Binding NewsTitle}"
                                                               TextWrapping="Wrap"
                                                               Foreground="Black"
                                                             Width="210"
                                                               FontSize="20"
                                                               FontWeight="SemiBold" />
                                                        <TextBlock Text="{Binding NewsPubDate}"
                                                               Foreground="Black"
                                                               TextWrapping="Wrap"
                                                               Margin="5"
                                                               FontSize="12" />
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                                <HyperlinkButton x:ConnectionId='9' x:Name="ArtsButton"
                                             Foreground="Red"
                                             Content="المزيد"
                                             FontSize="30"
                                             Width="100"
                                             Height="100"
                                                                      />
                            </StackPanel>
                        </ScrollViewer>

                    </PivotItem>
                    <PivotItem FlowDirection="RightToLeft"
                            VerticalAlignment="Stretch"
                       
                            x:Name="technologyHub">
                        <PivotItem.Header>
                            <TextBlock x:Uid="Section1Header"
                               FontWeight="Bold"
                                   Text=" تكنولوجيا "
                                   />
                        </PivotItem.Header>
                        <ScrollViewer>
                            <StackPanel Orientation="Vertical">
                                <ListView x:ConnectionId='6' x:Name="TechnologyGridView"
                                      SelectionMode="None"
                                      MaxHeight="500"
                                      IsItemClickEnabled="True"
                                      ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                      ScrollViewer.VerticalScrollMode="Disabled"
                                                                              
                                      ItemsSource="{Binding Feeds[4].NewsItems}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Border Width="320"
                                                Height="150"
                                                BorderBrush="Brown"
                                                BorderThickness="1"
                                                Margin="5">

                                                <StackPanel Orientation="Horizontal">
                                                    <Image Source="Assets/tech.jpg"
                                                        />

                                                    <StackPanel Orientation="Vertical" Margin="10,0,0,0">
                                                        <TextBlock Text="{Binding NewsTitle}"
                                                               TextWrapping="Wrap"
                                                               Foreground="Black"
                                                               Width="210"
                                                               FontSize="20"
                                                               FontWeight="SemiBold" />
                                                        <TextBlock Text="{Binding NewsPubDate}"
                                                               Foreground="Black"
                                                               TextWrapping="Wrap"
                                                               Margin="5"
                                                               FontSize="12" />
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                                <HyperlinkButton x:ConnectionId='7' x:Name="TechnologyButton"
                                             Foreground="Red"
                                             Content="المزيد"
                                             FontSize="30"
                                             Width="100"
                                             Height="100"
                                                                            />
                            </StackPanel>
                        </ScrollViewer>


                    </PivotItem>
                    <PivotItem FlowDirection="RightToLeft"
                            VerticalAlignment="Stretch"
                           
                            x:Name="WomanHub">
                        <PivotItem.Header>
                            <TextBlock x:Uid="Section1Header"
                                   FontWeight="Bold"
                                   Text=" المرأة "
                                  
                                   />
                        </PivotItem.Header>
                        <ScrollViewer>
                            <StackPanel Orientation="Vertical">
                                <ListView x:ConnectionId='4' x:Name="WomanGridView"
                                      SelectionMode="None"
                                      MaxHeight="500"
                                      IsItemClickEnabled="True"
                                      ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                      ScrollViewer.VerticalScrollMode="Disabled"
                                                                         
                                      ItemsSource="{Binding Feeds[5].NewsItems}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Border Width="320"
                                                Height="150"
                                                BorderBrush="Brown"
                                                BorderThickness="1"
                                                Margin="5">

                                                <StackPanel Orientation="Horizontal">
                                                    <Image Source="Assets/women.png"
                                                        />

                                                    <StackPanel Orientation="Vertical" Margin="10,0,0,0">
                                                        <TextBlock Text="{Binding NewsTitle}"
                                                               TextWrapping="Wrap"
                                                               Foreground="Black"
                                                               FontSize="20"
                                                               Width="210"
                                                               FontWeight="SemiBold" />
                                                        <TextBlock Text="{Binding NewsPubDate}"
                                                               Foreground="Black"
                                                               TextWrapping="Wrap"
                                                               Margin="5"
                                                               FontSize="12" />
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                                <HyperlinkButton x:ConnectionId='5' x:Name="WomanButtom"
                                             Foreground="Red"
                                             Content="المزيد"
                                             FontSize="30"
                                             Width="100"
                                             Height="100"
                                                                       />
                            </StackPanel>
                        </ScrollViewer>

                    </PivotItem>
                    <PivotItem FlowDirection="RightToLeft"
                            VerticalAlignment="Stretch"
                          
                            x:Name="EconomyHub">
                        <PivotItem.Header>
                            <TextBlock x:Uid="Section1Header"
                                  FontWeight="Bold"
                                   Text=" الأقتصاد "
                                    />
                        </PivotItem.Header>
                        <ScrollViewer>
                            <StackPanel Orientation="Vertical">
                                <ListView x:ConnectionId='2' x:Name="EconomyGridView"
                                      SelectionMode="None"
                                      MaxHeight="500"
                                      IsItemClickEnabled="True"
                                      ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                      ScrollViewer.VerticalScrollMode="Disabled"
                                                                           
                                      ItemsSource="{Binding Feeds[6].NewsItems}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Border Width="320"
                                                Height="150"
                                                BorderBrush="Brown"
                                                BorderThickness="1"
                                                Margin="5">

                                                <StackPanel Orientation="Horizontal">
                                                    <Image Source="Assets/eco.png"
                                                        />

                                                    <StackPanel Orientation="Vertical" Margin="10,0,0,0">
                                                        <TextBlock Text="{Binding NewsTitle}"
                                                               TextWrapping="Wrap"
                                                               Foreground="Black"
                                                               FontSize="20"
                                                               Width="210"
                                                               FontWeight="SemiBold" />
                                                        <TextBlock Text="{Binding NewsPubDate}"
                                                               Foreground="Black"
                                                               TextWrapping="Wrap"
                                                               Margin="5"
                                                               FontSize="12" />
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                                <HyperlinkButton x:ConnectionId='3' x:Name="EconomyButton"
                                             Foreground="Red"
                                             Content="المزيد"
                                             FontSize="30"
                                             Width="100"
                                             Height="100"
                                                                         />
                            </StackPanel>
                        </ScrollViewer>

                    </PivotItem>
                </Pivot>
            </Grid>
        </Grid>
        <Grid Grid.Row="2">
            <!--For windowsphone 8.1-->
            <ad:AdControl AdUnitId="161683" AppKey="34b54e16-20fd-45d2-b99b-fcc4036abf7c" />
        </Grid>
    </Grid>
</Page>

