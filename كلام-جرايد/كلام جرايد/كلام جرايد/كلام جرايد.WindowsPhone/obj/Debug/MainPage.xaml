                        <ScrollViewer>
                            <StackPanel Orientation="Vertical">
                                <ListView x:ConnectionId='10' x:Name="SportsGridView"
                                      SelectionMode="None"
                                      MaxHeight="500"
                                      IsItemClickEnabled="True"
                                      ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                      ScrollViewer.VerticalScrollMode="Disabled"
                                                                          
                                      ItemsSource="{Binding Feeds[1].NewsItems}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Border Width="320"
                                                Height="150"
                                                BorderBrush="Brown"
                                                BorderThickness="1"
                                                Margin="5">

                                                <StackPanel Orientation="Horizontal">
                                                    <Image Source="Assets/sport.png"
                                                        />

                                                    <StackPanel Orientation="Vertical" Margin="10,0,0,0">
                                                        <TextBlock Text="{Binding NewsTitle}"
                                                               TextWrapping="Wrap"
                                                               Foreground="Black"
                                                         Width="210"
                                                               FontSize="20"
                                                               FontWeight="SemiBold" />
                                                        <TextBlock Text="{Binding NewsPubDate}"
                                                               Foreground="Black"
                                                               TextWrapping="Wrap"
                                                               Margin="5"
                                                               FontSize="12" />
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                                <HyperlinkButton x:ConnectionId='11' x:Name="SportsButton"
                                             Foreground="Red"
                                             Content="المزيد"
                                             FontSize="30"
                                             Width="100"
                                             Height="100"
                                                                        />
                            </StackPanel>
                        </ScrollViewer>

                    </PivotItem>
                    <PivotItem FlowDirection="RightToLeft"
                            VerticalAlignment="Stretch"
                            
                            x:Name="ArtsHub">
                        <PivotItem.Header>
                            <TextBlock x:Uid="Section1Header"
                                   FontWeight="Bold"
                                   Text=" الفن "
                                   
                           />
